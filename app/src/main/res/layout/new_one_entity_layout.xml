<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:layout_marginTop="10dip"
    android:layout_marginRight="5dip"
    android:background="@drawable/background_for_new_orders"
    android:orientation="vertical"
    android:padding="6dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/MessPhoto"
            android:layout_width="86dip"
            android:layout_height="86dip"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/for_image"
            android:padding="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/HoldMyTitle"
                android:layout_width="260dip"
                android:layout_height="25dip"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/helveticaneuemedium500"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Your Mess Name"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/HoldMyAddress"
                android:layout_width="260dip"
                android:layout_height="50dp"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="6dip"
                android:ellipsize="end"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:text="Address line\nAddress line\nAddress line"
                android:textAlignment="textStart"
                android:textColor="#444444"
                android:textSize="13dip" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/ruler"
        android:layout_width="370dip"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginTop="8dip"
                android:fontFamily="@font/helveticaneuemedium500"
                android:text="ITEMS"
                android:textColor="#888888"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/HoldMyOrder"
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:layout_marginLeft="12dip"
                android:ellipsize="marquee"
                android:text="ITEMS ROW"
                android:textColor="@color/black"
                android:textSize="17dip" />
        </LinearLayout>

        <Button
            android:id="@+id/liveTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:text="Track Live" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.like.LikeButton
            android:id="@+id/liked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            app:anim_scale_factor="1"
            app:circle_end_color="@color/colorAccent"
            app:circle_start_color="@color/white"
            app:dots_primary_color="@color/colorAccent"
            app:dots_secondary_color="@color/white"
            app:icon_size="12dp"
            app:icon_type="heart"
            app:is_enabled="true"
            app:like_drawable="@drawable/heart_like"
            app:liked="false"
            app:unlike_drawable="@drawable/heart_unlike">

        </com.like.LikeButton>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginTop="8dip"
                android:fontFamily="@font/helveticaneuemedium500"
                android:text="BOUGHT ON"
                android:textColor="#888888"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/HoldMyDate"
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:layout_marginLeft="12dip"
                android:ellipsize="marquee"
                android:text="Date and time"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="17dip" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginTop="8dip"
                android:fontFamily="@font/helveticaneuemedium500"
                android:text="PRICE"
                android:textColor="#888888"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/HoldMyAmount"
                android:layout_width="100dip"
                android:layout_height="25dip"
                android:layout_marginLeft="12dip"
                android:ellipsize="marquee"
                android:text="Amount"
                android:textColor="@color/black"
                android:textSize="17dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dip"
                android:layout_marginTop="8dip"
                android:fontFamily="@font/helveticaneuemedium500"
                android:text="TYPE"
                android:textColor="#888888"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/HoldMyType"
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:layout_marginLeft="200dip"
                android:ellipsize="marquee"
                android:text="One-time-order"
                android:textColor="@color/black"
                android:textSize="17dip" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>