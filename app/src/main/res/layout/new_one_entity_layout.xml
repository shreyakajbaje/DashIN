<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="295dip"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:layout_marginTop="10dip"
    android:padding="6dip"
    android:background="@drawable/background_for_new_orders"
    >
    <ImageView
        android:layout_height="86dip"
        android:layout_width="86dip"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="8dp"
        android:padding="1dp"
        android:background="@drawable/for_image"
        android:id="@+id/MessPhoto"
        />
    <TextView
        android:layout_height="25dip"
        android:layout_width="260dip"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/MessPhoto"
        android:id="@+id/HoldMyTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dip"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:text="Your Mess Name"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/helveticaneuemedium500"
        android:textAlignment="textStart"
        android:gravity="start" />
    <TextView
        android:layout_height="50dp"
        android:layout_width="260dip"
        android:layout_toRightOf="@+id/MessPhoto"
        android:layout_marginTop="6dip"
        android:layout_below="@id/HoldMyTitle"
        android:id="@+id/HoldMyAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dip"
        android:textSize="13dip"
        android:textColor="#444444"
        android:text="Address line\nAddress line\nAddress line"
        android:paddingLeft="10dp"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:gravity="start" />
    <View
        android:layout_width="370dip"
        android:layout_height="2dp"
        android:background="#cccccc"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/MessPhoto"
        android:layout_centerHorizontal="true"
        android:id="@+id/ruler"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ruler"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="12dip"
        android:text="ITEMS"
        android:textSize="15dip"
        android:fontFamily="@font/helveticaneuemedium500"
        android:textColor="#888888"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dip"
        android:layout_below="@+id/ruler"
        android:layout_marginTop="24dip"
        android:layout_marginLeft="12dip"
        android:id="@+id/HoldMyOrder"
        android:text="ITEMS ROW"
        android:textSize="17dip"
        android:textColor="@color/black"
        android:ellipsize="marquee"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HoldMyOrder"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="12dip"
        android:text="BOUGHT ON"
        android:textSize="15dip"
        android:fontFamily="@font/helveticaneuemedium500"
        android:textColor="#888888"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dip"
        android:layout_below="@+id/HoldMyOrder"
        android:layout_marginTop="24dip"
        android:layout_marginLeft="12dip"
        android:id="@+id/HoldMyDate"
        android:text="Date and time"
        android:textAllCaps="true"
        android:textSize="17dip"
        android:textColor="@color/black"
        android:ellipsize="marquee"
        />

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HoldMyDate"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="12dip"
        android:text="PRICE"
        android:textSize="15dip"
        android:fontFamily="@font/helveticaneuemedium500"
        android:textColor="#888888"
        />
    <TextView
        android:layout_width="100dip"
        android:layout_height="25dip"
        android:layout_below="@+id/HoldMyDate"
        android:layout_marginTop="24dip"
        android:layout_marginLeft="12dip"
        android:id="@+id/HoldMyAmount"
        android:text="Amount"
        android:textSize="17dip"
        android:textColor="@color/black"
        android:ellipsize="marquee"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HoldMyDate"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="200dip"
        android:text="TYPE"
        android:textSize="15dip"
        android:fontFamily="@font/helveticaneuemedium500"
        android:textColor="#888888"
        />
    <TextView
        android:layout_width="100dip"
        android:layout_height="25dip"
        android:layout_below="@+id/HoldMyDate"
        android:layout_marginTop="24dip"
        android:layout_marginLeft="200dip"
        android:id="@+id/HoldMyType"
        android:text="Order type"
        android:textSize="17dip"
        android:textColor="@color/black"
        android:ellipsize="marquee"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/HoldMyAmount"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dip"
        android:textSize="17dip"
        android:textColor="#ff1177"
        android:text="Tap to see details or repeat this order "
        android:textAllCaps="true"
        />
</RelativeLayout>