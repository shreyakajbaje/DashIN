<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantCart">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" >

        <ImageView
            android:id="@+id/back_page"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Confirm order"
            android:fontFamily="@font/helveticaneuemedium500"
            android:textSize="20sp"
            android:textColor="@color/black"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/helveticaneuemedium500"
            android:text="Kulkarni's Snacks"
            android:textSize="17sp"
            android:textColor="@color/grey" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="140dp"
            android:src="@drawable/add_more_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/veg_icon"/>

        <TextView
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/robotocondensedbold"
            android:text="Panner Butter Masala"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="23dp">

            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="25dp">

                <ImageView
                    android:id="@+id/remove_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/remove_black"/>

                <TextView
                    android:id="@+id/item_no1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="-2dp"
                    android:layout_alignRight="@id/remove_item1"
                    android:layout_marginRight="-20dp"
                    android:text="1"
                    android:textSize="20dp"
                    android:textColor="@color/pink_layout" />

                <ImageView
                    android:id="@+id/add_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/item_no1"
                    android:layout_marginRight="-30dp"
                    android:src="@drawable/add_black" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:fontFamily="@font/robotocondensedbold"
                android:text="₹120"
                android:textColor="@color/black"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/non_veg_icon"/>
        <TextView
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/robotocondensedbold"
            android:text="Butter Chicken"
            android:textColor="@color/black"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="23dp">

            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="25dp">

                <ImageView
                    android:id="@+id/remove_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/remove_black" />

                <TextView
                    android:id="@+id/item_no2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="-2dp"
                    android:layout_alignRight="@id/remove_item2"
                    android:layout_marginRight="-20dp"
                    android:text="1"
                    android:textSize="20dp"
                    android:textColor="@color/pink_layout" />

                <ImageView
                    android:id="@+id/add_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/item_no2"
                    android:layout_marginRight="-30dp"
                    android:src="@drawable/add_black" />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:fontFamily="@font/robotocondensedbold"
                android:text="₹120"
                android:textColor="@color/black"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/veg_icon"/>
        <TextView
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/robotocondensedbold"
            android:text="Butter Naan"
            android:textColor="@color/black"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="23dp">

            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="25dp">

                <ImageView
                    android:id="@+id/remove_item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/remove_black" />

                <TextView
                    android:id="@+id/item_no3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="-2dp"
                    android:layout_alignRight="@id/remove_item3"
                    android:layout_marginRight="-20dp"
                    android:text="1"
                    android:textSize="20dp"
                    android:textColor="@color/pink_layout" />

                <ImageView
                    android:id="@+id/add_item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/item_no3"
                    android:layout_marginRight="-30dp"
                    android:src="@drawable/add_black" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:fontFamily="@font/robotocondensedbold"
                android:text="₹120"
                android:textColor="@color/black"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/coupon_icon"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_marginLeft="60dp"
            android:hint="Enter coupon code"
            android:textSize="18sp"
            android:fontFamily="@font/helveticaneuemedium500"/>

        <ImageView
            android:id="@+id/alertbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/instruction_icon"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:fontFamily="@font/helveticaneuemedium500"
            android:hint="Any instructions?Eg: Don't make the food spicy"
            android:textSize="15sp"
            android:src="@drawable/instruction_txt"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="160dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/payment_txt"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:src="@drawable/item_txt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="320dp"
            android:text="₹450"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:src="@drawable/tax_txt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="320dp"
            android:text="₹18.7"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:src="@drawable/partner_txt"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="98dp"
            android:layout_marginLeft="115dp"
            android:src="@drawable/partner_info_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="320dp"
            android:text="₹75"/>

        <View
            android:layout_width="350dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:src="@drawable/total_txt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotocondensedbold"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="320dp"
            android:text="₹500"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/prefer_icon"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:src="@drawable/prefer_txt"/>

        <ImageView
            android:id="@+id/dine_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:src="@drawable/dine_btn" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="190dp"
            android:src="@drawable/home_btn" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:isScrollContainer="false"
            app:menu="@menu/bottom_navigation"
            android:background="?android:attr/windowBackground"
            app:itemTextColor="@color/tab_bottom_color"
            app:itemIconTint="@color/tab_bottom_color"
            app:labelVisibilityMode="labeled"/>
    </LinearLayout>

</LinearLayout>