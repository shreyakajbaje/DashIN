<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment"
    android:background="@drawable/homescreenbackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_arrow"
            android:clickable="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:focusable="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_txt"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="50dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_txt"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="350dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_popup_background"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:layout_width="91dp"
            android:layout_height="73dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/profile_pic_icon" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alexa McDonald"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="40dp"
            android:textSize="25sp"
            android:fontFamily="@font/robotocondensedbold"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/check_arrow"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="140dp"
            android:text="alexa_mcd@gmail.com"
            android:fontFamily="@font/helveticaneuemedium500"
            android:textColor="@color/grey"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/helveticaneuemedium500"
            android:text="Credits"
            android:textSize="25sp"
            android:textColor="@color/pink_layout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="260dp"
            android:fontFamily="@font/helveticaneuemedium500"
            android:text="52"
            android:textSize="40sp"
            android:textColor="@color/pink_layout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="310dp"
            android:fontFamily="@font/helveticaneuemedium500"
            android:text="DIN"
            android:textSize="20sp"
            android:textColor="@color/pink_layout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="290dp"
            android:fontFamily="@font/helveticaneuemedium500"
            android:text="10 DIN = â‚¹ 1"
            android:textSize="10sp"
            android:textColor="@color/grey"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:background="@drawable/card_2_background">

        <RelativeLayout
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Cards"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/robotocondensedbold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/helveticaneuemedium500"
                android:layout_marginLeft="35dp"
                android:text="Add a credit or debit card."
                android:textSize="10sp"
                android:textColor="@color/grey"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_arrow"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="330dp"/>

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="79dp"
                android:background="@android:color/darker_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/robotocondensedbold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/helveticaneuemedium500"
                android:layout_marginLeft="35dp"
                android:text="Add or remove delivery address."
                android:textSize="10sp"
                android:textColor="@color/grey"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_arrow"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="330dp"/>

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="68dp"
                android:background="@android:color/darker_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settings_layout"
            android:layout_width="380dp"
            android:layout_height="65dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/robotocondensedbold"
                android:textColor="@color/black"
                android:textSize="20sp"/>


            <ImageView
                android:id="@+id/settings"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_arrow"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="330dp"/>

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="63dp"
                android:background="@android:color/darker_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/logout"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/robotocondensedbold"
                android:textColor="@color/black"
                android:textSize="20sp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_arrow"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="330dp"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dashin_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="420dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/version1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>
    </RelativeLayout>

</LinearLayout>